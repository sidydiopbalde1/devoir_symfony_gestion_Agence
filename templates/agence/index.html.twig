{% extends 'base.html.twig' %}

{% block title %}Hello classeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
                    {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                    {% endfor %}
                     {# <a href="{{ path('app_classe_add') }}" class= "btn btn-primary"><i class="icon">Ajout</i></a> #}
                    <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="row">Numero</th>
                            <th scope="row">Adresse</th>
                            <th scope="row">Telephone</th>
                            <th scope="row">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for agence in agences %}
                            <tr>
                                <td>{{ agence.numero }}</td>
                                <td>{{ agence.adresse }}</td>
                                <td>{{ agence.Telephone }}</td>
                              <td>
                                <a href=""><i class="icon">Voir</i></a>
                                <a href=""><i class="icon">Supprimer</i></a>
                              </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucune agence trouv√©e.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(agences) }}
                </div>
</div>
{% endblock %}
